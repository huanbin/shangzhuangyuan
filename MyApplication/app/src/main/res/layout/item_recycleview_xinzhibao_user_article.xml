<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/xinzhibao_avtar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:src="@drawable/qq" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xinzhibao_avtar">

            <TextView
                android:id="@+id/xinzhibao_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="商状元"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/xinzhibao_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xinzhibao_user_name"
                android:layout_marginLeft="5dp"
                android:text="2017-01-06"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/xinzhibao_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xinzhibao_user_name"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/xinzhibao_date"
                android:text="11:46"
                android:textColor="#FF999999"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <com.jindou.myapplication.ui.view.CircleImageView
        android:id="@+id/xinzhibao_content_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/xinzhibao_new"
        app:degreed="12dp" />

    <TextView
        android:id="@+id/xinzhibao_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="顾萧然：大奖得主是位70后，秦皇岛市青龙县本地人"
        android:textColor="#FF1A1A1A"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/ivReadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="center"
            android:src="@drawable/readcount" />

        <TextView
            android:id="@+id/xinzhibao_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/ivReadCount"
            android:gravity="center"
            android:text="200"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/xinzhibao_user_article_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/share_collect" />
    </RelativeLayout>
</LinearLayout>