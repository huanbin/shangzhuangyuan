<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_view_test_item_person_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleNoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="顾晓小:   Applay欲杀入三星腹地SamsungPay惨遭破解"
        android:textColor="#1A1A1A"
        android:textSize="17sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTypeNoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合资讯"
            android:textColor="#FF999999"
            android:textSize="12sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:id="@+id/tvSourceNoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvTypeNoImg"
            android:text="新华网"
            android:textColor="#FF999999"
            android:textSize="12sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            />

        <ImageButton
            android:id="@+id/ibShareNoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/share_collect"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="23dp"
            android:paddingBottom="23dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>

