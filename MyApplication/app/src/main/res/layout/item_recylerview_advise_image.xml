<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAdviseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp"
        android:text="顾晓然:  原油沥青日内操作建议与原油"
        android:textColor="#1A1A1A"
        android:textSize="17sp" />
    <!--android:lineSpacingExtra="1dp"-->
    <ImageView
        android:id="@+id/ivAdviseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/adviseimage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">

        <ImageButton
            android:id="@+id/ibAdvise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/advise_button" />
        <!--<TextView-->
        <!--android:id="@+id/tvAdviseSource"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/advise"-->
        <!--android:textColor="#FF26A2D6"-->
        <!--android:textSize="10sp"-->
        <!--android:gravity="center"-->
        <!--android:background="@drawable/bg_advise_button_normal"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:paddingTop="1dp"-->
        <!--android:paddingBottom="1dp"-->
        <!--android:paddingLeft="0.5dp"-->
        <!--android:paddingRight="0.5dp"-->
        <!--/>-->
        <TextView
            android:id="@+id/tvAdviseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ibAdvise"
            android:gravity="center"
            android:text="新华网"
            android:textColor="#FF999999"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/ibAdviseShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="20dp"
            android:scaleType="center"
            android:src="@drawable/share_collect" />
    </RelativeLayout>
</LinearLayout>